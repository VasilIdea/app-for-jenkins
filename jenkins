pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo 'Hello World-1'
                sh "ls -la"
            }
        }
        stage('Test') { 
            steps {
                echo 'Hello World-2'
                sh "ls -la" 
            }
        }
        stage('Deploy') { 
            steps {
                echo 'Hello World-3'
                sh "ls -la"
            }
        }
    }
}
